<div>
    <h1>Hola, {{user.name}}</h1>
    <h1>{{user.email}}</h1>
</div>

<h1>Que compramos hoy?</h1>
    <ul>
  {{#each payload}}
    <li>
        
      <h2>Nombre producto: {{product_title}}</h2>
      <p>{{product_thumbnail}}</p>
      <p>Precio: {{product_price}}</p>
      <p>{{product_description}}</p>
      
      <button class="add-to-cart-button" data-product-id={{_id}}>Agregar al carrito</button>
    </li>
  {{/each}}
</ul>

    
